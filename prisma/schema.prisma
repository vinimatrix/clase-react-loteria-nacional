generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Contact {
  id        Int      @id @default(autoincrement()) // Clave primaria
  name      String
  email     String   @unique // Email único por contacto
  phone     String?  // Campo opcional
  company   String?
  createdAt DateTime @default(now()) // Timestamp automático
  updatedAt DateTime @updatedAt // Se actualiza automáticamente
}